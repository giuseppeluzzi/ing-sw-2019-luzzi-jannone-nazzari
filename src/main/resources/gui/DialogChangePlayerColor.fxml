<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="200.0" prefWidth="600.0"
  xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="it.polimi.se2019.adrenalina.ui.graphic.controller.DialogChangePlayerColor" styleClass="dialogContainer">
  <children>
    <BorderPane styleClass="dialogContent" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <top>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Seleziona un personaggio">
          <styleClass>
            <String fx:value="text" />
            <String fx:value="title" />
          </styleClass>
        </Text>
      </top>
      <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER" styleClass="dialogContent">
          <HBox fx:id="charactersHBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
            spacing="30.0">
          </HBox>
        </VBox>
      </center>
      <bottom>
        <Button fx:id="buttonNext" alignment="CENTER" defaultButton="true"
          mnemonicParsing="false" onAction="#next" text="Continua"
          BorderPane.alignment="BOTTOM_CENTER"/>
      </bottom>
    </BorderPane>
  </children>

</AnchorPane>
