<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.FlowPane?>
<AnchorPane prefHeight="900.0" prefWidth="1600.0" stylesheets="@assets/style.css"
  xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <GridPane fx:id="boardGrid" gridLinesVisible="true" AnchorPane.bottomAnchor="10.0"
      AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
      <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="10.0" percentWidth="49.5"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" percentHeight="65.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>

      <!-- map grid -->
      <GridPane id="mapGrid" fx:id="mapGrid" gridLinesVisible="true" GridPane.columnIndex="0"
        GridPane.rowIndex="0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="16" prefWidth="100.0"/>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="130.0" prefWidth="130.0" maxWidth="130.0"/>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="130.0" prefWidth="130.0" maxWidth="130.0"/>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="130.0" prefWidth="130.0" maxWidth="130.0"/>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="130.0" prefWidth="130.0" maxWidth="130.0"/>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="16.0"
            prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" percentHeight="20.5" prefHeight="30.0"
            vgrow="SOMETIMES"/>
          <RowConstraints minHeight="130.0" prefHeight="130.0" maxHeight="130.0" vgrow="SOMETIMES"/>
          <RowConstraints minHeight="135.0" prefHeight="135.0" maxHeight="135.0" vgrow="SOMETIMES"/>
          <RowConstraints minHeight="130.0" prefHeight="130.0" maxHeight="130.0" vgrow="SOMETIMES"/>
          <RowConstraints minHeight="10.0" percentHeight="11.4" prefHeight="30.0"
            vgrow="SOMETIMES"/>
        </rowConstraints>

        <HBox visible="false" fx:id="normalBoardSkulls" GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="3" spacing="12.5" alignment="CENTER_RIGHT">
          <padding>
            <Insets top="-19" right="79"/>
          </padding>
        </HBox>

        <HBox fx:id="dominationKilltrack" id="dominationKilltrack"
          GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3" minHeight="100" maxHeight="100" >
          <padding>
            <Insets left="35"/>
          </padding>
          <VBox spacing="23" maxWidth="250" minWidth="250">
            <padding>
              <Insets top="12" left="25" />
            </padding>
            <HBox fx:id="blueSpawnPointDamages" spacing="5" />
            <HBox fx:id="redSpawnPointDamages" spacing="5" />
            <HBox fx:id="yellowSpawnPointDamages" spacing="5" />
          </VBox>
          <FlowPane fx:id="dominationBoardSkulls" alignment="TOP_LEFT" orientation="HORIZONTAL" prefWrapLength="58" hgap="6" vgap="12">
            <padding>
              <Insets top="15" left="4" />
            </padding>
          </FlowPane>
        </HBox>

        <VBox GridPane.columnIndex="5" GridPane.rowIndex="0" alignment="BOTTOM_CENTER">
          <padding>
            <Insets bottom="8.5" left="20"/>
          </padding>
          <ImageView fitWidth="50.0" preserveRatio="true">
            <image>
              <Image url="@assets/img/powerups/powerup_back.png"/>
            </image>
          </ImageView>
        </VBox>

        <VBox fx:id="boardHasWeapons" GridPane.columnIndex="5" GridPane.rowIndex="1"
          GridPane.rowSpan="2" alignment="CENTER">
          <padding>
            <Insets bottom="67.5" right="1"/>
          </padding>
          <ImageView fitWidth="70.0" preserveRatio="true">
            <image>
              <Image url="@assets/img/weapon/weapon_back.png"/>
            </image>
          </ImageView>
        </VBox>

        <HBox alignment="TOP_RIGHT" GridPane.columnIndex="3" GridPane.columnSpan="2"
          GridPane.rowIndex="0">
          <padding>
            <Insets top="-10"/>
          </padding>
          <StackPane>
            <HBox fx:id="blueWeapons" alignment="TOP_RIGHT" spacing="13"/>
            <HBox fx:id="blueWeaponsHover" alignment="TOP_RIGHT" spacing="13"/>
          </StackPane>
        </HBox>

        <VBox alignment="BOTTOM_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.rowSpan="5" translateY="-132" translateX="-15">
          <StackPane>
            <VBox fx:id="redWeapons" alignment="BOTTOM_LEFT" spacing="12"/>
            <VBox fx:id="redWeaponsHover" alignment="BOTTOM_LEFT" spacing="12"/>
          </StackPane>
        </VBox>

        <VBox alignment="TOP_RIGHT" GridPane.columnIndex="5" GridPane.rowIndex="0"
          GridPane.rowSpan="5" translateX="25" translateY="-15" rotate="180">
          <padding>
            <Insets bottom="15"/>
          </padding>
          <StackPane>
            <VBox fx:id="yellowWeapons" alignment="TOP_RIGHT" spacing="13"/>
            <VBox fx:id="yellowWeaponsHover" alignment="TOP_RIGHT" spacing="13"/>
          </StackPane>
        </VBox>
      </GridPane>

      <!-- enemy dashboards -->
      <AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="2">
        <VBox fx:id="enemyDashboards" alignment="TOP_RIGHT" spacing="10" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.topAnchor="30"/>
      </AnchorPane>

      <HBox fx:id="bottomGrid" GridPane.columnIndex="0" GridPane.columnSpan="2"
        GridPane.rowIndex="1">
        <Region fx:id="spacerBottomGrid"/>
        <!-- turn actions -->
        <VBox alignment="BOTTOM_RIGHT" maxWidth="320" minHeight="100" minWidth="300" spacing="10">
          <Button fx:id="skipTurnActionButton" alignment="CENTER" prefWidth="300"
            styleClass="turnActionButton" visible="false">Prosegui
          </Button>
          <VBox fx:id="turnActionButtons" alignment="TOP_CENTER" spacing="10"/>
        </VBox>
      </HBox>

    </GridPane>
  </children>
</AnchorPane>
